<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Edit Your Property Details</h2>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="p-4 bg-white shadow rounded needs-validation" novalidate enctype="multipart/form-data">
        
        <div class="mb-3">
            <label for="title" class="form-label">Name</label>
            <input name="listing[title]" id="title" class="form-control" type="text" value="<%= listing.title %>" required>
            <div class="invalid-feedback">
                Please enter a valid property name.
            </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="description" class="form-control" rows="4" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Please enter a small description.
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" id="location" class="form-control" type="text" value="<%= listing.location %>" required>
            <div class="invalid-feedback">
                Please enter the location.
            </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" id="country" class="form-control" type="text" value="<%= listing.country %>" required>
            <div class="invalid-feedback">
                Please enter the country.
            </div>
        </div>

        <div class="mb-4">
    <label class="form-label fw-semibold">Previous Listing Image</label>
    <div class="border rounded p-3 d-flex align-items-center shadow-sm" style="background-color: #f8f9fa;">
        <img src="<%= originalImageUrl %>" alt="Previous image" class="img-thumbnail me-3" style="max-height: 150px;">
        <div>
            <p class="mb-1 text-muted small"><i>This is the current image associated with your listing. You may upload a new image below to replace it.</i></p>
        </div>
    </div>
</div>


        <div class="mb-3">
            <label for="imageUrl" class="form-label">Upload new image</label>
            <input name="listing[image]" id="imageUrl" class="form-control" type="file">
        </div>

        <!-- <div class="mb-3">
            <label for="imageFilename" class="form-label">Image Filename</label>
            <input name="listing[image][filename]" id="imageFilename" class="form-control" type="text" value="<%= listing.image.filename %>">
        </div> -->

        <div class="mb-3">
            <label for="price" class="form-label">Price (per night)</label>
            <input name="listing[price]" id="price" class="form-control" type="number" value="<%= listing.price %>" required>
            <div class="invalid-feedback">
                Please enter a valid price tag.
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4 update-btn">Update</button>
        </div>
    </form><br><br>
</div>