<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/path/to/reviews-style.css">

<div class="container mt-5">

    <h2 class="mb-4 text-center fw-bold">Property Details</h2>

    <div class="card mx-auto shadow rounded-4 p-3 mb-5" style="max-width: 48rem; border: none;">
        <img src="<%= listing.image.url %>" 
             class="card-img-top rounded-4 shadow-sm mb-3" 
             alt="<%= listing.title %> image" 
             style="height: 22rem; object-fit: cover;">

        <div class="card-body px-4">
            <h3 class="card-title fw-bold mb-3"><%= listing.title %></h3>
            <p class="card-text text-muted mb-4 fs-5"><%= listing.description %></p>

            <!-- Listing Details -->
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item border-0 ps-0"><strong>üí∞ Price:</strong> ‚Çπ <%= listing.price.toLocaleString("en-IN") %> / night</li>
                <li class="list-group-item border-0 ps-0"><strong>üìç Location:</strong> <%= listing.location %></li>
                <li class="list-group-item border-0 ps-0"><strong>üåè Country:</strong> <%= listing.country %></li>
            </ul>

            <div class="d-flex justify-content-between mt-4">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary px-4">‚úèÔ∏è Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-outline-danger px-4" onclick="return confirm('Are you sure you want to delete this listing?')">üóëÔ∏è Delete</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Comment Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h4 class="card-title mb-4 fw-semibold">Leave a Comment</h4>
                    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <div class="rating">
                                <input type="radio" id="star5" name="review[rating]" value="5"><label for="star5">‚òÖ</label>
                                <input type="radio" id="star4" name="review[rating]" value="4"><label for="star4">‚òÖ</label>
                                <input type="radio" id="star3" name="review[rating]" value="3"><label for="star3">‚òÖ</label>
                                <input type="radio" id="star2" name="review[rating]" value="2"><label for="star2">‚òÖ</label>
                                <input type="radio" id="star1" name="review[rating]" value="1"><label for="star1">‚òÖ</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea class="form-control" id="comment" rows="4" name="review[comment]" placeholder="Write your feedback here..." required></textarea>
                            <div class="invalid-feedback">Please write some reviews before submitting.</div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Submit Review</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- All Reviews Section -->
    <div class="container mt-4">
        <hr>
        <h4 class="text-center mb-4">All Reviews:</h4>
        <div class="row g-4">
            <% for(review of listing.reviews) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm rounded-4 overflow-hidden">
                        <div class="card-body">
                            <h5 class="card-title mb-2">Customer Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= '‚òÖ'.repeat(review.rating) %> <!-- Displaying stars as rating -->
                            </h6>
                            <p class="card-text"><%= review.comment %></p>
                            <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review.id %>?_method=DELETE">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

</div>
